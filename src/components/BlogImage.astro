---
import { Picture } from "@astrojs/image/components";
interface Props {
  src: string;
  alt: string;
  aspectRatio?: number;
  loading?: "lazy" | "eager";
  class?: string;
}
const {
  src,
  alt,
  aspectRatio = 16 / 9,
  loading = "lazy",
  class: className,
} = Astro.props;
---

<div class={"m-3 " + className}>
  <Picture
    widths={[1280]}
    sizes="(max-width: 800px) 90vw, 768px"
    aspectRatio={aspectRatio}
    src={src}
    loading={loading}
    alt={alt}
    class="rounded-lg sm:rounded-xl overflow-hidden"
    width={1024}
    height={576}
  />
</div>

