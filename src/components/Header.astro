---
import { Icon } from "astro-icon";

const navbar = [
  {
    name: "Home",
    href: "/",
  },
  {
    name: "Blog",
    href: "/blog",
  },
  {
    name: "Images",
    href: "/images",
  },
];

const desktopIcons =
  "dark:text-violet-300 text-violet black hover:text-violet-500 dark:hover:text-violet-400 hidden sm:block";
const mobileIcons =
  "dark:text-violet-300 text-black hover:text-violet-500 dark:hover:text-violet-400 sm:hidden";
---

<header
  class="bg-indigo dark:bg-indigo-700 text-lg dark:text-indigo-300 mx-auto max-w-6xl flex flex-row justify-between"
>
  <a href="/" class="mx-8 my-5 flex items-center" aria-label="Website Logo">
    <Icon name="lucide:mountain-snow" class="w-8 h-8" />
    <span
      class="self-center sm:hidden text-2xl whitespace-nowrap dark:text-white ml-3 mt-1"
      >NoFuss</span
    >
  </a>
  {
    (
      <nav class="pt-6 flex flex-row space-x-8">
        {navbar.map((navbar) => (
          <a
            href={navbar.href}
            class="dark:text-violet-300 text-violet hover:text-violet-500 dark:hover:text-violet-400 hidden sm:block"
          >
            {navbar.name}
          </a>
        ))}
      </nav>
    )
  }
  <button class="nav-toggle mx-8 my-5 sm:invisible" aria-label="menu button">
    <Icon name="lucide:menu" class="w-8 h-8" />
  </button>
</header>
<header class="nav-menu hidden bg-white dark:bg-zinc-900">
  {
    (
      <nav class="m-6 flex flex-col inline-flex space-y-3">
        {navbar.map((navbar) => (
          <a
            href={navbar.href}
            class="dark:text-zinc-300 text-black hover:text-zinc-500 dark:hover:text-zinc-400 sm:hidden"
          >
            {navbar.name}
          </a>
        ))}
      </nav>
    )
  }
</header>
